{
    "name": "@mashroom/mashroom-demo-ssr-remote-portal-app",
    "description": "Mashroom Demo Hybrid Rendering Remote Portal App",
    "version": "1.0.0",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom-demo-remote-portal-app",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "start": "pm2 start demo-ssr-remote-app-cluster.json",
        "stop": "pm2 stop demo-ssr-remote-app-cluster.json",
        "reload": "pm2 reload demo-ssr-remote-app-cluster.json",
        "dev": "cross-env NODE_ENV=development nodemon -e ts,tsx,json --watch src/server --exec \"npm run build:server && node dist/server\"",
        "build": "concurrently \"npm run type-check\" \"npm run lint\" \"npm run build:server\" \"npm run build:client\"",
        "build:server": "babel ./src/server -d dist/server --extensions .ts && webpack --config webpack.server.js ",
        "build:client": "webpack --config webpack.client.js",
        "type-check": "tsc --noEmit",
        "lint": "eslint --ext .ts --ext .tsx --fix --quiet ./src",
        "test": "jest --passWithNoTests"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "express": "^4.19.2",
        "body-parser": "^1.20.2",
        "pino": "^9.2.0",
        "pino-pretty": "^11.2.1",
        "cross-fetch": "^4.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "redux": "^5.0.1",
        "react-redux": "^9.1.2"
    },
    "devDependencies": {
        "@mashroom/mashroom": "^2.7.1",
        "@mashroom/mashroom-portal": "^2.7.1",
        "@mashroom/mashroom-json-schemas": "^2.7.1",
        "@babel/cli": "^7.24.7",
        "@babel/core": "^7.24.7",
        "@babel/preset-env": "^7.24.7",
        "@babel/preset-typescript": "^7.24.7",
        "@babel/preset-react": "^7.24.7",
        "@babel/register": "^7.24.6",
        "babel-register-ts": "^7.0.0",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.1.3",
        "concurrently": "^8.2.2",
        "cross-var": "^1.1.0",
        "css-loader": "^7.1.2",
        "eslint": "^8.57.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-react": "^7.34.3",
        "typescript": "^5.5.3",
        "@typescript-eslint/eslint-plugin": "^7.15.0",
        "@typescript-eslint/parser": "^7.15.0",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/react-redux": "^7.1.33",
        "@types/webpack": "^5.28.5",
        "html-webpack-plugin": "^5.6.0",
        "jest": "^29.7.0",
        "sass": "^1.77.6",
        "sass-loader": "^14.2.1",
        "style-loader": "^4.0.0",
        "nodemon": "^3.1.4",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-middleware": "^7.2.1",
        "webpack-dev-server": "^5.0.4",
        "webpack-hot-middleware": "^2.26.1",
        "webpack-merge": "^6.0.1",
        "webpack-node-externals": "^3.0.0",
        "mini-css-extract-plugin": "^2.9.0"
    }
}
