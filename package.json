{
    "name": "@mashroom/mashroom-demo-ssr-remote-portal-app",
    "description": "Mashroom Demo Hybrid Rendering Remote Portal App",
    "version": "1.0.0",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom-demo-remote-portal-app",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "start": "pm2 start demo-ssr-remote-app-cluster.json",
        "stop": "pm2 stop demo-ssr-remote-app-cluster.json",
        "reload": "pm2 reload demo-ssr-remote-app-cluster.json",
        "dev": "cross-env NODE_ENV=development nodemon -e ts,tsx,json --watch src/server --exec \"npm run build:server && node dist/server\"",
        "build": "npm run type-check && npm run lint && npm run build:server && npm run build:client && cpy ./screenshot.png dist/frontend",
        "build:server": "babel ./src/server -d dist/server --extensions .ts && webpack --config webpack.server.js ",
        "build:client": "webpack --config webpack.client.js",
        "type-check": "tsc --noEmit",
        "lint": "eslint --fix",
        "test": "jest --passWithNoTests"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "express": "^4.21.2",
        "body-parser": "^2.2.0",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "cross-fetch": "^4.1.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "redux": "^5.0.1",
        "react-redux": "^9.2.0"
    },
    "devDependencies": {
        "@mashroom/mashroom": "^2.8.1",
        "@mashroom/mashroom-portal": "^2.8.1",
        "@mashroom/mashroom-json-schemas": "^2.8.1",
        "@babel/cli": "^7.27.0",
        "@babel/core": "^7.26.10",
        "@babel/preset-env": "^7.26.9",
        "@babel/preset-typescript": "^7.27.0",
        "@babel/preset-react": "^7.26.3",
        "babel-register-ts": "^7.0.0",
        "babel-loader": "^10.0.0",
        "cross-var": "^1.1.0",
        "css-loader": "^7.1.2",
        "eslint": "^9.23.0",
        "@eslint/js": "^9.23.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "^28.11.0",
        "eslint-plugin-react": "^7.37.4",
        "globals": "^16.0.0",
        "typescript": "^5.8.2",
        "@typescript-eslint/eslint-plugin": "^8.29.0",
        "@typescript-eslint/parser": "^8.29.0",
        "@types/react": "^18.3.20",
        "@types/react-dom": "^18.3.6",
        "@types/react-redux": "^7.1.34",
        "@types/webpack": "^5.28.5",
        "html-webpack-plugin": "^5.6.3",
        "jest": "^29.7.0",
        "sass": "^1.86.2",
        "sass-loader": "^16.0.5",
        "style-loader": "^4.0.0",
        "nodemon": "^3.1.9",
        "cpy-cli": "^5.0.0",
        "webpack": "^5.98.0",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.1",
        "webpack-dev-middleware": "^7.4.2",
        "webpack-hot-middleware": "^2.26.1",
        "webpack-merge": "^6.0.1",
        "webpack-node-externals": "^3.0.0",
        "mini-css-extract-plugin": "^2.9.2"
    }
}
