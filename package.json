{
    "name": "@mashroom/mashroom-demo-ssr-remote-portal-app",
    "description": "Mashroom Demo Hybrid Rendering Remote Portal App",
    "version": "1.0.0",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom-demo-remote-portal-app",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "start": "pm2 start demo-ssr-remote-app-cluster.json",
        "stop": "pm2 stop demo-ssr-remote-app-cluster.json",
        "reload": "pm2 reload demo-ssr-remote-app-cluster.json",
        "dev": "cross-env NODE_ENV=development nodemon -e ts,tsx,json --watch src/server --exec \"npm run build:server && node dist/server\"",
        "build": "concurrently \"npm run type-check\" \"npm run lint\" \"npm run build:server\" \"npm run build:client\"",
        "build:server": "babel ./src/server -d dist/server --extensions .ts && webpack --config webpack.server.js ",
        "build:client": "webpack --config webpack.client.js",
        "type-check": "tsc --noEmit",
        "lint": "eslint --ext .ts --ext .tsx --fix --quiet ./src",
        "test": "jest --passWithNoTests"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "express": "^4.18.2",
        "body-parser": "^1.20.1",
        "pino": "^8.10.0",
        "pino-pretty": "^9.1.1",
        "cross-fetch": "^3.1.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "redux": "^4.2.1",
        "react-redux": "^8.0.5"
    },
    "devDependencies": {
        "@mashroom/mashroom": "^2.3.0",
        "@mashroom/mashroom-portal": "^2.3.0",
        "@mashroom/mashroom-json-schemas": "^2.3.0",
        "@babel/cli": "^7.20.7",
        "@babel/core": "^7.20.12",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@babel/preset-react": "^7.18.6",
        "@babel/register": "^7.18.9",
        "babel-register-ts": "^7.0.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^29.4.2",
        "babel-loader": "^9.1.2",
        "concurrently": "^7.6.0",
        "cross-var": "^1.1.0",
        "css-loader": "^6.7.3",
        "eslint": "^8.33.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.32.2",
        "typescript": "^4.9.5",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@types/redux": "^3.6.0",
        "@types/react-redux": "^7.1.25",
        "@types/pino": "^7.0.5",
        "@types/webpack": "^5.28.0",
        "@types/webpack-dev-middleware": "^5.3.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^29.4.2",
        "sass": "^1.58.0",
        "sass-loader": "^13.2.0",
        "style-loader": "^3.3.1",
        "nodemon": "^2.0.20",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-middleware": "^6.0.1",
        "webpack-dev-server": "^4.11.1",
        "webpack-hot-middleware": "^2.25.3",
        "webpack-merge": "^5.8.0",
        "webpack-node-externals": "^3.0.0",
        "mini-css-extract-plugin": "^2.7.2"
    }
}
