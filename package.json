{
    "name": "@mashroom/mashroom-demo-ssr-remote-portal-app",
    "description": "Mashroom Demo Server-Side Rendering Remote Portal App",
    "version": "1.0.0",
    "homepage": "https://www.mashroom-server.com",
    "repository": "github:nonblocking/mashroom-demo-remote-portal-app",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "start": "pm2 start demo-ssr-remote-app-cluster.json",
        "stop": "pm2 stop demo-ssr-remote-app-cluster.json",
        "reload": "pm2 reload demo-ssr-remote-app-cluster.json",
        "dev": "cross-env NODE_ENV=development nodemon -e ts,tsx,json --watch src/server --exec \"npm run build:server && node dist/server\"",
        "build": "concurrently \"npm run type-check\" \"npm run lint\" \"npm run build:server\" \"npm run build:client\"",
        "build:server": "webpack --config webpack.server.js ",
        "build:client": "webpack --config webpack.client.js",
        "type-check": "tsc --noEmit",
        "lint": "eslint --ext .ts --ext .tsx --fix --quiet ./src",
        "test": "jest --passWithNoTests"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "express": "^4.17.2",
        "body-parser": "^1.19.1",
        "pino": "^7.6.4",
        "pino-pretty": "^7.5.0",
        "cross-fetch": "^3.1.5",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "redux": "^4.1.2",
        "react-redux": "^7.2.6"
    },
    "devDependencies": {
        "@mashroom/mashroom": "^2.0.0-alpha.1",
        "@mashroom/mashroom-portal": "^2.0.0-alpha.1",
        "@mashroom/mashroom-json-schemas": "^2.0.0-alpha.1",
        "@babel/cli": "^7.16.8",
        "@babel/core": "^7.16.10",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-typescript": "^7.16.7",
        "@babel/preset-react": "^7.16.7",
        "@babel/register": "^7.16.9",
        "babel-register-ts": "^7.0.0",
        "babel-eslint": "^10.1.0",
        "babel-jest": "^27.4.6",
        "babel-loader": "^8.2.3",
        "concurrently": "^7.0.0",
        "cross-var": "^1.1.0",
        "css-loader": "^6.5.1",
        "eslint": "^8.7.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.28.0",
        "typescript": "^4.5.5",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "@types/redux": "^3.6.0",
        "@types/react-redux": "^7.1.22",
        "@types/pino": "^7.0.5",
        "@types/webpack": "^5.28.0",
        "@types/webpack-dev-middleware": "^5.3.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^27.4.7",
        "sass": "^1.49.0",
        "react-hot-loader": "^4.13.0",
        "sass-loader": "^12.4.0",
        "style-loader": "^3.3.1",
        "nodemon": "^2.0.15",
        "webpack": "^5.66.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-middleware": "^5.3.0",
        "webpack-dev-server": "^4.7.3",
        "webpack-hot-middleware": "^2.25.1",
        "webpack-merge": "^5.8.0",
        "webpack-node-externals": "^3.0.0",
        "mini-css-extract-plugin": "^2.5.2"
    }
}
